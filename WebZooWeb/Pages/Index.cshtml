    ViewData["Title"] = "Home page";
}

<!-- Make sure Bootstrap 5 CSS and JS are included in _Layout.cshtml -->
<!-- CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<body>
    <div class="text-center">
        <!-- Carousel -->
        <div id="zooCarousel" class="carousel slide mb-4" data-bs-ride="carousel" data-bs-interval="3000">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#zooCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#zooCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#zooCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/images/flamingocut5.jpg" class="d-block w-100" style="height:500px; object-fit:cover;" alt="Elephant">
    
                </div>
                <div class="carousel-item">
                    <img src="/images/flamingopartyone.jpg" class="d-block w-100" style="height:500px; object-fit:cover;" alt="Elephant">
                </div>
                <div class="carousel-item">
                    <img src="/images/flamingopartytwo.jpg" class="d-block w-100" style="height:500px; object-fit:cover;" alt="Penguin">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#zooCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#zooCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

       @*  <h1 class="display-4">Velkommen til Zealand Zoo</h1> *@
     

        <div class="row">
            <div class="col-sm-8">
                <h2>🦩🦩🦩 Velkommen til Zealand Zoo 🦩🦩🦩</h2>
                <p>🦩 Åbent hver fredag fra klokken 14.00 til 20.00 🦩</p>
                <p>
                    Fredagsbar er ikke bare en fredag aften med øl og musik, det er et fænomen, en livsstil, en næsten spirituel oplevelse pakket ind i plastickrus og dåsesodavand 😎
                    <br />Vi er den gruppe, der har sat sig for at gøre hver fredag til noget, man taler om i generationer, selvom hukommelsen dagen efter måske er lidt diffus 😅

                    <br />Når vi åbner dørene, smelter stressen fra ugen som isterninger i et glas gin, og alle regler for almindelig, kedelig voksenadfærd smides ud ad vinduet – og ja, vi elsker det næsten lige så meget, som I vil! 🎉
                    <br />Musikken er altid på kanten af genial og absurd, drinksene flyder som vand i floden, og latteren er næsten obligatorisk, for vi kan simpelthen ikke garantere sikkerheden for dem, der prøver at holde sig alvorlige 😜

                   <br/> Vi har lært, at de bedste minder opstår, når man kombinerer alt for høje forventninger med minimal planlægning, og det er netop vores speciale. At gå til fredagsbar med os er lidt som at hoppe ind i en parallel dimension, hvor alle er venner, selv dem man aldrig har talt med før, og hvor enhver pinlig dans faktisk bliver til en triumf 💃🕺

                    <br/>Vi lover ikke bare en aften – vi lover en oplevelse, der får dig til at sige: “Hvordan kan alle andre fredage nogensinde måle sig med dette?” Vi er måske selv lidt for begejstrede og overdrevne, men det er kun fordi vi har set, hvordan små, glade øjeblikke vokser til legender, og vi vil dele det med jer alle 🥳

                    <br />Hver fredag er vores måde at hylde livet, studietiden og den evige jagt på gode historier, som man kan genfortælle i kantinen uden at nogen ruller med øjnene 😏 Kom og vær med, eller hold dig væk – vi vil ikke tvinge nogen, men vi kan garantere, at de, der bliver, aldrig glemmer det! ✨
                </p>


            </div>

            <div class="col-sm-4 text-center">
                <h4 class="mb-4">🦩🦩 Kommende events 🦩🦩</h4>
                @foreach (var e in Model.Upcoming)
                {
                    <div class="card mb-3 mx-auto shadow-sm" style="max-width: 18rem;">
                        <div class="card-body">
                            @if (e.ImgPath != "" && e.ImgPath != "jhufgreg")
                            {
                                <img src="@e.ImgPath" class="img-fluid object-fit-contain border rounded" />
                            }
                            @if (e.ImgPath == "" || e.ImgPath == "jhufgreg")
                            {
                                <img src="/images/flamingopartytwo.jpg" class="img-fluid object-fit-contain border rounded" />
                            }
                            <h5 class="card-title">@e.Name</h5>
                            <p class="card-text">
                                Dato: @e.Date<br />
                                Starttidspunkt: @e.StartHour<br />
                                Sluttidspunkt: @e.EndHour<br />
                                Pladsbegrænsning: @e.MaxAttendents<br />
                                Tilmeldte: @e.CurrentAttendents<br />
                                Beskrivelse: @e.Description
                            </p>
                        </div>
                    </div>
                }
            </div>

